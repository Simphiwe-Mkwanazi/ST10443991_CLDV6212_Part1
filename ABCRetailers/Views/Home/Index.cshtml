@model ABCRetailers.Models.ViewModels.HomeViewModel
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="text-secondary">Customers</div>
                <div class="display-6 fw-bold">@Model.CustomerCount</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="text-secondary">Products</div>
                <div class="display-6 fw-bold">@Model.ProductCount</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="text-secondary">Orders</div>
                <div class="display-6 fw-bold">@Model.OrderCount</div>
            </div>
        </div>
    </div>
</div>

<h4 class="mb-3">Featured Products</h4>
<div class="row g-3">
@foreach (var p in Model.FeaturedProducts)
{
    <div class="col-md-3">
        <div class="card h-100">
            @if (!string.IsNullOrEmpty(p.ImageUrl))
            {
                <img class="card-img-top" src="@p.ImageUrl" alt="@p.ProductName" />
            }
            <div class="card-body">
                <h5 class="card-title">@p.ProductName</h5>
                <div class="text-secondary">R @p.Price</div>
            </div>
        </div>
    </div>
}
</div>